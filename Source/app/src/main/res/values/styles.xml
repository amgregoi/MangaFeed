<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/background_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">?attr/text_color</item>
        <item name="actionOverflowMenuStyle">@style/MangaFeed.Widget.PopupMenu.OverflowMenu</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="background_color">@color/manga_charcoal</item>
        <item name="background_color2">@color/manga_light_charcoal</item>
        <item name="text_color">@color/manga_white</item>
        <item name="text_color2">@color/manga_white_alpha50</item>
        <item name="accent1">@color/manga_white</item>
        <item name="accent2">@color/manga_white_alpha50</item>
        <!-- Consider new versioned Style sheets -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">?attr/background_color</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="background_color">@color/manga_off_white</item>
        <item name="background_color2">@color/manga_white_alpha50</item>
        <item name="text_color">@color/manga_charcoal</item>
        <item name="text_color2">@color/manga_light_charcoal</item>
        <item name="accent1">@color/colorPrimaryDark</item>
        <item name="accent2">@color/colorPrimaryLight</item>
        <!-- Consider new versioned Style sheets -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">?attr/background_color</item>

    </style>

    <!-- deprecated -->
    <style name="MangaFeed.Widget.ViewPager" parent="android:Widget">
        <item name="android:background">?attr/background_color2</item>
    </style>

    <style name="MangaFeed.Widget.PopupMenu.OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <style name="Manga.Widget.TextView.SubText" parent="AppTheme">
        <item name="android:textColor">?attr/text_color2</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Manga.Widget.TextView.Header" parent="AppTheme">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Homebase.Widget.Button.Blue" parent="@style/Widget.AppCompat.Button">
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/button_solid</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!--



    text views



    -->

    <!--
    H1
    -->
    <style name="Fable.TextView.Header.Bold.H1" parent="Fable.TextView.Header.Bold">
        <item name="android:textSize">@dimen/text_size_26sp</item>
    </style>

    <style name="Fable.TextView.Header.Normal.H1" parent="Fable.TextView.Header.Bold.H1">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="Fable.TextView.Header.Light.H1" parent="Fable.TextView.Header.Bold.H1">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!--
    H2
    -->
    <style name="Fable.TextView.Header.Bold.H2" parent="Fable.TextView.Header.Bold">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Fable.TextView.Header.Normal.H2" parent="Fable.TextView.Header.Bold.H2">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="Fable.TextView.Header.Light.H2" parent="Fable.TextView.Header.Bold.H2">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Fable.TextView.Header.Bold" parent="AppTheme">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:textColor">@color/manga_black</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Fable.TextView.Header.Normal" parent="Fable.TextView.Header.Bold">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="Fable.TextView.Header.Light" parent="Fable.TextView.Header.Bold">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Fable.TextView.Body.Bold" parent="AppTheme">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/manga_black</item>
        <item name="android:lineSpacingExtra">0.02sp</item>
    </style>

    <style name="Fable.TextView.Body.Normal" parent="Fable.TextView.Body.Bold">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Fable.TextView.Body.Light" parent="Fable.TextView.Body.Bold">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Fable.TextView.Body.Small.Bold" parent="AppTheme">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/manga_black</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Fable.TextView.Body.Small.Normal" parent="Fable.TextView.Body.Small.Bold">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Fable.TextView.Body.Small.Light" parent="Fable.TextView.Body.Small.Bold">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Fable.TextView.Tiny.Bold" parent="AppTheme">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="android:textColor">@color/manga_black</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
    </style>

    <style name="Fable.TextView.Tiny.Normal" parent="Fable.TextView.Tiny.Bold">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="Fable.TextView.Tiny.Light" parent="Fable.TextView.Tiny.Bold">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

</resources>
