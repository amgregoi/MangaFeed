<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="background_color" format="reference|color" />
    <attr name="background_color2" format="reference|color" />
    <attr name="text_color" format="reference|color" />
    <attr name="text_color2" format="reference|color" />
    <attr name="accent1" format="reference|color" />
    <attr name="accent2" format="reference|color" />


    <declare-styleable name="MButton">
        <attr name="mButtonStyle" />
        <attr name="mButtonText" format="string" />
        <attr name="mLoading" />
    </declare-styleable>


    <declare-styleable name="ImageTextLineItem">
        <attr name="mIconSrc" format="reference" />
        <attr name="mText" format="string" />
        <attr name="mTextSecondary" format="string" />
    </declare-styleable>


    <declare-styleable name="EmptyState">
        <attr name="mPrimaryText" />
        <attr name="mSecondaryText" />
        <attr name="mButtonText" />
        <attr name="mButtonStyle" />
        <attr name="mButtonVisible" format="boolean" />
        <attr name="mLoading" />
        <attr name="mDrawableImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="mProgressBarStyle" />
        <attr name="mLoading" />
    </declare-styleable>

    <attr name="mProgressBarStyle" format="flags">
        <flag name="DarkBlue" value="0x00" />
        <flag name="White" value="0x01" />
    </attr>

    <declare-styleable name="InputLine">
        <attr name="mHideTopDivider" format="boolean" />
        <attr name="mHideBottomDivider" format="boolean" />
        <attr name="mLabelTextColor" format="reference" />
        <attr name="mInputTextColor" format="reference" />
        <attr name="mLabel" format="string" />
        <attr name="mHint" format="string" />
        <attr name="mHideLabel" format="boolean" />
        <attr name="mFocused" format="boolean" />
        <attr name="mImeOption" format="flags">
            <flag name="None" value="0x00" />
            <flag name="Next" value="0x05" />
            <flag name="Done" value="0x06" />
        </attr>

        <attr name="mInputType" format="flags">
            <flag name="text" value="0x01" />
            <flag name="textPersonName" value="0x61" />
            <flag name="textEmailAddress" value="0xd1" />
            <flag name="textPassword" value="0x81" />
            <flag name="textPasswordVisible" value="0x91" />
            <flag name="phone" value="0x03" />
        </attr>
    </declare-styleable>









    <!--

    Shared


    -->
    <attr name="mButtonStyle" format="flags">
        <flag name="Border" value="0x01" />
        <flag name="Solid" value="0x02" />
        <flag name="Light" value="0x03" />
        <flag name="Transparent" value="0x04" />
    </attr>

    <attr name="mLoading" format="boolean" />


</resources>