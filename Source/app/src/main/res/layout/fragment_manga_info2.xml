<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="?attr/background_color2"
    android:orientation="vertical">

    <com.amgregoire.mangafeed.v2.custom.EmptyState
        android:id="@+id/emptyStateMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color2"
        android:visibility="visible"
        app:mangaButtonVisible="true"
        app:mangaLoading="true"
        app:mangaPrimaryText="Oops"
        app:mangaSecondaryText="There was a problem loading information for this manga" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavMangaInfo"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMangaInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background_color"
        android:elevation="2dp"
        app:itemIconTint="@drawable/nav_selector"
        app:itemTextColor="@drawable/nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_manga_info_bottom" />

</android.support.constraint.ConstraintLayout>