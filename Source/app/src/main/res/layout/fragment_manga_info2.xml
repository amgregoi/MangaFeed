<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="?attr/background_color2"
    android:orientation="vertical">

    <com.amgregoire.mangafeed.v2.custom.EmptyState
        android:id="@+id/emptyStateMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color2"
        android:visibility="visible"
        app:mButtonVisible="true"
        app:mLoading="true"
        app:mPrimaryText="Oops"
        app:mSecondaryText="There was a problem loading information for this manga" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavMangaInfo"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMangaInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMangaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background_color"
        android:elevation="2dp"
        app:itemIconTint="@drawable/nav_selector"
        app:itemTextColor="@drawable/nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_manga_info_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>