<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/manga_light_charcoal"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="com.amgregoire.mangafeed.v2.LockedBottomSheetBehaviour">


    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".025" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95" />

    <TextView
        android:id="@+id/bottomSheetHeader"
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Add Filter"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/buttonFilterStatus"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />

    <ImageButton
        android:id="@+id/buttonFilterStatus"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/navigation_back"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/bottomSheetHeader"
        app:layout_constraintBottom_toBottomOf="@id/bottomSheetHeader"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v7.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:defaultQueryHint="Add text filter"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetHeader" />

    <View
        android:id="@+id/viewFilterCompleteCover"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/green" />

    <View
        android:id="@+id/viewFilterReadingCover"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/blue" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/baseline_margin_unit_16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle_green"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:text="Completed"
        android:textColor="?attr/text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/green"
        app:layout_constraintStart_toEndOf="@id/green"
        app:layout_constraintTop_toTopOf="@id/green" />


    <ImageView
        android:id="@+id/blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/baseline_margin_unit_16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle_blue"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/green" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:text="Reading"
        android:textColor="?attr/text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/blue"
        app:layout_constraintStart_toEndOf="@id/blue"
        app:layout_constraintTop_toTopOf="@id/blue" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/baseline_margin_unit_16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle_red"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/blue" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:text="OnHold"
        android:textColor="?attr/text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/red"
        app:layout_constraintStart_toEndOf="@id/red"
        app:layout_constraintTop_toTopOf="@id/red" />


    <ImageView
        android:id="@+id/gray"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/baseline_margin_unit_16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle_gray"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/red" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:text="Reading"
        android:textColor="?attr/text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/gray"
        app:layout_constraintStart_toEndOf="@id/gray"
        app:layout_constraintTop_toTopOf="@id/gray" />


</android.support.constraint.ConstraintLayout>
