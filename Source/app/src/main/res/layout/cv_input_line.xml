<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/separatorTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/manga_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/tvLineLabel"
        style="@style/Fable.TextView.Body.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorTop" />

    <EditText
        android:id="@+id/etLineInput"
        style="@style/Fable.TextView.Body.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:hint="@string/placeholder"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/manga_black"
        android:textColorHint="@color/manga_gray"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/tvPasswordToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLineLabel"
        app:layout_goneMarginEnd="0dp"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/tvPasswordToggle"
        style="@style/Fable.TextView.Body.Small.Bold"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_pill_dark"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="@string/show"
        android:textColor="@color/manga_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/etLineInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etLineInput" />

    <View
        android:id="@+id/separatorBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/manga_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLineInput" />


</androidx.constraintlayout.widget.ConstraintLayout>